# Environment Variables for Insurance System

# Server Configuration
NODE_ENV=production
PORT=4000

# Database Configuration
MONGO_URI=mongodb://admin:password123@localhost:27017/insurance_db?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Frontend Configuration
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:4000

# Render Configuration (for deployment)
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# Email (SMTP) Configuration
# Example for Gmail: use an App Password and SMTP_HOST=smtp.gmail.com, SMTP_PORT=587
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM=
